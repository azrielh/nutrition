<div class="welcome">

  <div style="width: 100%; height: 100vh;"
    data-vide-bg="<%= asset_path('video/NutritionApp_edit.mp4') %>" data-vide-options="loop: true, muted: true, position: 0% 0%" class="welcome-video">
  <ul class="welcome-title navbar-right">
    <% if user_signed_in? %>
      <li>Welcome <%= current_user.full_name %></li>
      <li><%= link_to "Sign Out", sessions_path, method: :delete %></li>
    <% else %>
      <li><%= link_to "Sign In", new_session_path %></li>
      <li><%= link_to "Sign Up", new_user_path %></li>
    <% end %>
  </ul>
  </div>
  <div class="welcome-message">
    <h2>Welcome to Nutrilabel</h2>
    <h3>Keep your customers informed</h3>
    <h3>Generate nutritional information for your recipes</h3>
    <button class="btn btn-primary">Learn More</button>
  </div>
</div>
