<div class="container">
  <div class="col-md-6">
    <div class="modal-body">
      <%= simple_form_for Recipe.new, html: {class: "form-horizontal"} do |f| %>
        <%= f.input :title, placeholder: "Add recipe title", class: "form-control title-form" %>
        <%= f.input :description, placeholder: "Write a recipe description", class: "form-control description-form" %>
        <%= f.input :image, class: "form-control" %>
        <%= f.association :category, as: :select, collection: Category.order(:name) %>
    </div>
    <div class="modal-footer">
      <%= f.submit class: "btn btn-primary" %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
      <% end %>
  </div>
</div>
