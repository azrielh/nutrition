<div class="container">
  <div class="col-md-6">
    <div class="modal-body">
      <%= simple_form_for (@recipe || Recipe.new), html: {class: "form-horizontal"} do |f| %>
        <%= f.input :title, placeholder: "Add recipe title", class: "form-control title-form" %>
        <%= f.input :description, placeholder: "Write a recipe description", class: "form-control description-form" %>
        <%= f.input :image, class: "form-control" %>
        <%= f.input :servings, label: "Servings per recipe", input_html: { class: 'form-input form-control unit-input', :style=> 'width: 60px; padding: 5px; text-align: center', min: "1" , value: 1 } %>
        <%= f.input :price, placeholder: "$$$", as: :decimal, input_html: { class: 'form-input form-control unit-input', :style=> 'width: 60px; padding: 5px; text-align: center' } %>
        <%= f.association :category, as: :select, collection: Category.order(:sort) %>
    </div>
    <div class="modal-footer">
      <%= f.submit class: "btn btn-primary" %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
      <% end %>
  </div>
</div>
