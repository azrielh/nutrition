<div class="container">
  <h1>Recipe</h1>
  <%= image_tag @recipe.image.url(:large) %>
  <h1><%= @recipe.title %></h1>
  <p><%= @recipe.description %></p>

  <div class="tag">
    <%= @recipe.category.name %>
  </div>

  <%= link_to "Edit", edit_recipe_path(@recipe), class: "btn btn-default" %>
  <i class="fa fa-trash"></i><%= link_to "Delete", recipe_path(@recipe), method: :delete, data: {confirm: "are you sure?"}, class: "btn btn-default" %>
  <%= link_to "Back", recipes_path, class: "btn btn-default" %>

  <h1>add ingredients and directions on this page</h1>
  <%#= @ingredient.each do |x| %>
    <%#= x.long_description %>
  <%# end %>






  <%= render 'form_search' %>

  <%#= simple_form_for [@ingredient, @recipe] %>

  <%# end %>


<div class="col-md-6">
  <h2>Ingredients</h2>
  <% @recipe.ingredients.each do |i| %>
    <%= i.qty %>
    <%= i.unit %>
    <%= i.name %>
  <% end %>
</div>

<div class="col-md-6">
  <h2>Directions</h2>
  <ol>
    <% @recipe.directions.each do |d| %>
      <li><%= d.instruction %></li>
    <% end %>
  </ol>
</div>

<script id="food-test-template" type="x-tmpl-mustache">
  <div class="foods">
    <h2>Item Name: {{item_name}}</h2>
    <p>Calories: {{nf_calories}} kcal</p>
    <p>Protein: {{nf_protein}}g</p>
    <p>Total Fat: {{nf_total_fat}}g</p>

  </div>
</script>

<div class="food"></div>

<!-- this is a test for the qjax and mustache to reference -->
<script id="campaign-listing-template" type="x-tmpl-mustache">
  <div class="campaign">
    <h2><a href="javascript:void(0);" data-id="{{id}}">{{title}}</a></h2>
    <p>{{description}}</p>
    <hr>
  </div>
</script>

<div class="campaigns"></div>
<div class="show-campaign"></div>


</div>
