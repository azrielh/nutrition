<div class="container">
  <h1>Recipe</h1>
  <%= image_tag @recipe.image.url(:large) %>

  <%= render 'nutritional_table' %>

  <h1><%= @recipe.title %></h1>
  <p><%= @recipe.description %></p>

  <div class="tag">
    <%= @recipe.category.name %>
  </div>
  <br>
  <%= link_to '<i class="fa fa-pencil x4"></i>'.html_safe, edit_recipe_path(@recipe) %>
  <%= link_to '<i class="fa fa-trash x4"></i>'.html_safe, recipe_path(@recipe), method: :delete, data: { confirm: "are you sure?"} %>
  <%= link_to "Back", recipes_path, class: "btn btn-default" %>

  <p>add ingredients and directions on this page</p>

<div class="col-md-6">
  <h2>Ingredients</h2>
  <table>
    <tr>
      <th>Qty</th>
      <th>Unit</th>
      <th>Ingredient</th>
    </tr>
    <hr>
    <% @recipe.ingredients.each do |i| %>
      <tr>
        <td><%= i.qty %></td>
        <td><%= i.unit %></td>
        <td><%= i.name %></td>
      </tr>
      <hr>
    <% end %>
  </table>
</div>

<div class="col-md-6">
  <h2>Directions</h2>
  <ol>
    <% @recipe.directions.each do |d| %>
      <li><%= d.instruction %></li>
      <hr>
    <% end %>
  </ol>
</div>


</div>
